amends "https://pages.git.generalassemb.ly/modular-curriculum-all-courses/universal-resources-internal/static/v2/pkl/template.pkl"

import "microlessons.pkl" as mls

// See template.pkl for full configuration options available here.

// After modifying this file, use this command while in the root directory
// for this project to create the final configuration file (config.json):
// pkl eval -f json ./internal-resources/data/config.pkl -o %{moduleDir}/%{moduleName}.%{outputFormat}

repo {
  // This name is shown in the header nav to navigate users home
  friendlyName = "GitHub Collaboration"
  // This must match the repo name as it appears on GitHub exactly
  name = "github-collaboration"
  type = "Lesson"
}

courses {
  new {
    name = "seb"
    microlessons {
      // add microlessons here, in the order they should be delivered
      mls.concepts
      mls.collaboratorMethodSetup
      mls.collaboratorMethodAddCollaborators
      mls.collaboratorMethodBranching
      mls.collaboratorMethodPullRequests
      mls.collaboratorMethodMerging
      mls.collaboratorMethodMergeConflicts
      mls.collaboratorMethodWorkingWithATeam
      mls.forkMethodSetup
      mls.forkMethodForking
      mls.forkMethodBranching
      mls.forkMethodPullRequests
      mls.forkMethodMerging
      mls.forkMethodMergeConflicts
      mls.forkMethodWorkingWithATeam
      (mls.collaboratorMethodCheatSheet) {
        type = "Level Up content"
      }
      (mls.collaboratorMethodForking) {
        type = "Level Up content"
      }
      (mls.forkMethodCheatSheet) {
        type = "Level Up content"
      }
      (mls.branchNamingConventions) {
        type = "Level Up content"
      }
    }
  }
  new {
    name = "fallback"
    microlessons {
      // add microlessons here, in the order they should be delivered
      mls.concepts
      mls.collaboratorMethodSetup
      mls.collaboratorMethodAddCollaborators
      mls.collaboratorMethodBranching
      mls.collaboratorMethodPullRequests
      mls.collaboratorMethodMerging
      mls.collaboratorMethodMergeConflicts
      mls.collaboratorMethodWorkingWithATeam
      mls.forkMethodSetup
      mls.forkMethodForking
      mls.forkMethodBranching
      mls.forkMethodPullRequests
      mls.forkMethodMerging
      mls.forkMethodMergeConflicts
      mls.forkMethodWorkingWithATeam
      (mls.collaboratorMethodCheatSheet) {
        type = "Level Up content"
      }
      (mls.collaboratorMethodForking) {
        type = "Level Up content"
      }
      (mls.forkMethodCheatSheet) {
        type = "Level Up content"
      }
      (mls.branchNamingConventions) {
        type = "Level Up content"
      }
    }
  }
}

